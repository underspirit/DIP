function out = closestmethod(a,r,c)
%   对一个指定图像进行缩放操作
%   
    [m,n] = size(a);    
    tr = m/r; tc = n/c; %计算行和列的缩放比例
    out = uint8(zeros(r,c));
    for i = 1:r
        for j = 1:c
            x = ceil(i*tr); y = ceil(j*tc); %对目标图像的每一个像素,按比例缩放求出原图对象的像素点,使用ceil向下取整,因为可能超出m,n的范围
            out(i,j) = a(x,y);  %将原图该点像素值赋予目标像素点
        end
    end
end